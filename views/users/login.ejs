<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %> 
<body>
  <%- include('../partials/header') %>  
  <section class="overflow">
    <form class='formLogin' action="/user/login" method="post">
        <div class="login">
            <br>
            <h2>Login: </h2>
            <label> Correo Electronico</label>
              <input class='cantidad' id="Correo electrónico" type = "text" name ="eMail" value="<%=locals.oldDate ? oldDate.email : null%>" autofocus >
              <span></span>
              <% if (locals.errors && errors.eMail) { %>
                <div class="danger">
                    <%= errors.eMail.msg %>
                </div>
              <% } %>
            <br>
            <br>
            <label> Contraseña</label>
            <input class='cantidad' id="Contraseña" type = "password" name = "password" id = "password">
            <span></span>
            <% if (locals.errors && errors.password) { %>
              <div class="danger">
                  <%= errors.password.msg %>
              </div>
              
            <% } %>
            <br>
            <label>
              <input type="checkbox" class="recordarme" name="remember_user"> Recordar mi usuario
            </label>
            <br>
            <button class="btn" type="submit"> Ingresar</button>
            <a href="/" class="btn">Olvidé mi contraseña</a>
          </div>
    </form>
  </section>  
    <%- include('../partials/footer') %> 
  <script src="https://kit.fontawesome.com/21b565b396.js" crossorigin="anonymous"></script>
  <script src="/users/jsFront/validationLogin.js" type="text/javaScript"></script>

</body>
</html>


    

